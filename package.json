{
  "name": "hono-api-starter",
  "version": "1.0.0",
  "description": "A starter repository to build Web Applications with Hono",
  "type": "module",
  "scripts": {
    "commit": "cz",
    "dev": "tsx watch ./src/node.ts",
    "console": "tsx ./src/console.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "yarpm run lint --fix",
    "prisma:reset": "yarpm run prisma:migrate:dev reset",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "update-all-dependencies": "pnpm dlx npm-check-updates -u",
    "prepare": "is-ci || husky",
    "generate": "yarpm run prisma:generate",
    "postinstall": "yarpm run generate"
  },
  "packageManager": "pnpm@9.7.0",
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.9.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@sentry/aws-serverless": "^8.25.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "devmoji": "^2.3.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-sonarjs": "^1.0.4",
    "eslint-plugin-unused-imports": "^4.1.3",
    "husky": "^9.1.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "prisma-kysely": "^1.8.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5",
    "yarpm": "^1.2.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@prisma/client": "^5.18.0",
    "@prisma/instrumentation": "^5.18.0",
    "@t3-oss/env-core": "^0.11.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "hono": "^4.5.5",
    "kysely": "^0.27.4",
    "lodash": "^4.17.21",
    "prisma-extension-kysely": "^2.1.0",
    "zod": "^3.23.8"
  }
}
